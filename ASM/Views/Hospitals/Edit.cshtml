@model ASM.Models.Hospital

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="form-container col-md-6 mx-auto">
        <h1 class="text-center mb-4">Edit Hospital</h1>

        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label for="Name" class="form-label">Hospital Name</label>
                <input type="text" class="form-control" id="Name" asp-for="Name" required>
                <div class="invalid-feedback">
                    Please provide a valid Hospital Name.
                </div>
            </div>

            <div class="mb-3">
                <label for="LocationId" class="form-label">Location ID</label>
                <select class="form-control" id="LocationId" asp-for="LocationId" asp-items="ViewBag.Locations" required></select>
                <div class="invalid-feedback">
                    Please select a valid Location ID.
                </div>
            </div>

            <div class="mb-3">
                <label for="Code" class="form-label">Code</label>
                <input type="text" class="form-control" id="Code" asp-for="Code" required>
                <div class="invalid-feedback">
                    Please provide a valid Code.
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>


