@model IEnumerable<ASM.Models.DTOs.AppointmentDTO>

<!DOCTYPE html>
<html>
<head>
    <title>Appointments List</title>
    <style>
        /* Add any additional styling for the PDF here */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        .text-center {
            text-align: center;
        }

        .container {
            margin: 20px;
        }

        /* Add a style to hide navigation links */
        .no-print {
            display: none;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2 class="text-center">Appointments List</h2>

        <!-- Hide the navigation links in the PDF -->
        <div class="no-print">
            <a href="/">Home</a>
            <a href="/Services">Services</a>
            <a href="/About">About</a>
            <a href="/Login">Login</a>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Patient Name</th>
                    <th>Category Name</th>
                    <th>Hospital Name</th>
                    <th>Location Name</th>
                    <th>Note</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.Date</td>
                            <td>@item.PatientName</td>
                            <td>@item.CategoryName</td>
                            <td>@item.HospitalName</td>
                            <td>@item.LocationName</td>
                            <td>@item.Note</td>
                        </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
